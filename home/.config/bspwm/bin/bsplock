#!/usr/bin/env bash

######################################################
##	 ▄▄▄▄     ██████  ██▓███   █     █░ ███▄ ▄███▓  
##	▓█████▄ ▒██    ▒ ▓██░  ██▒▓█░ █ ░█░▓██▒▀█▀ ██▒  
##	▒██▒ ▄██░ ▓██▄   ▓██░ ██▓▒▒█░ █ ░█ ▓██    ▓██░  
##	▒██░█▀    ▒   ██▒▒██▄█▓▒ ▒░█░ █ ░█ ▒██    ▒██   
##	░▓█  ▀█▓▒██████▒▒▒██▒ ░  ░░░██▒██▓ ▒██▒   ░██▒  
##	░▒▓███▀▒▒ ▒▓▒ ▒ ░▒▓▒░ ░  ░░ ▓░▒ ▒  ░ ▒░   ░  ░  
##	▒░▒   ░ ░ ░▒  ░ ░░▒ ░       ▒ ░ ░  ░  ░      ░  
##	 ░    ░ ░  ░  ░  ░░         ░   ░  ░      ░     
##	 ░            ░               ░           ░     
##	      ░                                        
######################################################
## Exec	-----------------
i3lock -n -c 00000000 -t -e --date-str="@$(uname -n)" --date-pos="w/2:h/2+90" \
        --indicator --force-clock --pass-media-keys --pass-power-keys --pass-volume-keys --date-size=16 \
        --insidever-color=2e3440A8 --insidewrong-color=2e3440A8 --inside-color=2e344000 --ringwrong-color=bf616a \
        --ring-color=3B4252 --ringver-color=3B4252 --line-uses-inside --keyhl-color=eceff4 --bshl-color=bf616a \
        --separator-color=81a1c1 --verif-color=3B4252 --wrong-color=bf616a --ind-pos="w/2:h/2-42" --time-color=eceff4 \
        --time-pos="w/2:h/2+35" --time-str="%I:%M %p" --date-color=eceff4 --time-font="Iosevka Nerd Font" \
        --date-font="Iosevka Nerd Font" --verif-font="Iosevka Nerd Font" --wrong-font="Iosevka Nerd Font" \
        --greeter-font="Iosevka Nerd Font:style=Bold" --greeter-text="$USER" --greeter-color=ECEFF4 --greeter-pos="w/2:h/2+70" \
        --radius 50 --ring-width 3 --greeter-size=18 --time-size=14 --verif-size=10 --wrong-size=10  --modif-size=9 --modif-pos="w/2:h/2-15" #--no-verify